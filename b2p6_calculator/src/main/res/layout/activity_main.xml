<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="计算过程,例如:245*35.8="
        android:textSize="25sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_white_bg"
            android:layout_weight="1"
            android:gravity="center"
            android:text="AC"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/tv_plus_minus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_white_bg"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+/-"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/tv_mod"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_white_bg"
            android:layout_weight="1"
            android:gravity="center"
            android:text="%"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/tv_devide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/selector_orange_bg"
            android:text="/"
            android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_white_bg"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/tv_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_white_bg"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/tv_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_white_bg"
            android:layout_weight="1"
            android:gravity="center"
            android:text="3"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/tv_mul"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/selector_orange_bg"
            android:text="X"
            android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_white_bg"
            android:layout_weight="1"
            android:gravity="center"
            android:text="4"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/tv_five"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_white_bg"
            android:layout_weight="1"
            android:gravity="center"
            android:text="5"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/tv_six"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_white_bg"
            android:layout_weight="1"
            android:gravity="center"
            android:text="6"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/tv_minus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/selector_orange_bg"
            android:text="-"
            android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_seven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_white_bg"
            android:layout_weight="1"
            android:gravity="center"
            android:text="7"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/tv_eight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_white_bg"
            android:layout_weight="1"
            android:gravity="center"
            android:text="8"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/tv_nine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_white_bg"
            android:layout_weight="1"
            android:gravity="center"
            android:text="9"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/tv_plus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/selector_orange_bg"
            android:text="+"
            android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:id="@+id/tv_zero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_white_bg"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:layout_weight="2"
            android:text="0"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/tv_point"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_white_bg"
            android:gravity="center"
            android:layout_weight="1"
            android:text="."
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/tv_equal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_orange_bg"
            android:text="="
            android:textSize="30sp"/>
    </LinearLayout>
</LinearLayout>





