<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用户名："
        android:textSize="25sp"/>
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入用户名"
        android:textSize="25sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="密码："
        android:textSize="25sp"/>
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:textSize="25sp"
        android:inputType="textPassword"/>
    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textSize="25sp"/>
    <Button
        android:onClick="deliver_object"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="传递对象到另一个界面"
        android:textSize="25sp"/>
    <Button
        android:onClick="deliver_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打电话给10086"
        android:textSize="25sp"/>
    <Button
        android:onClick="deliver_smsto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发短信给10086"
        android:textSize="25sp"/>
    <Button
        android:onClick="deliver_sohu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开浏览器sohu主页"
        android:textSize="25sp"/>

</LinearLayout>